# Text2SQL Environment Configuration Template
# Copy this file to .env and fill in your values

# ==================== OpenAI Configuration ====================
# Get your API key from: https://platform.openai.com/api-keys
OPENAI_API_KEY=sk-your-api-key-here

# Model to use (gpt-4o-mini recommended for cost-effectiveness)
OPENAI_CHAT_MODEL=gpt-4o-mini

# ==================== API Configuration ====================
# Host and port for FastAPI server
API_HOST=127.0.0.1
API_PORT=8000

# ==================== Database Configuration ====================
# For Oracle Database connections (when implementing real DB integration)
HR_USER=HR
HR_PASSWORD=your_password
HR_DSN=your_db_host:1521/XEPDB1

# Banking database credentials (optional)
BANKING_USER=banking_user
BANKING_PASSWORD=password
BANKING_DSN=db_host:1521/banking_db

# ==================== Streamlit Configuration ====================
# Port for Streamlit UI
STREAMLIT_PORT=8501

# ==================== Logging Configuration ====================
# Log level: DEBUG, INFO, WARNING, ERROR, CRITICAL
LOG_LEVEL=INFO

# ==================== Development Configuration ====================
# Set to True for development/debugging
DEBUG=False

# ==================== Optional: LLM Configuration ====================
# Temperature controls randomness (0.0-2.0, lower = more consistent)
LLM_TEMPERATURE=0.3

# Max tokens for response
LLM_MAX_TOKENS=500

# ==================== Optional: Vector Search Configuration ====================
# FAISS index path (if implementing persistent storage)
FAISS_INDEX_PATH=./data/faiss_index

# ==================== Optional: Cache Configuration ====================
# Enable response caching
ENABLE_CACHE=True

# Cache TTL in seconds
CACHE_TTL=3600
